{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["github", "jest"],
  "extends": ["plugin:github/recommended"],
  "rules": {
    "camelcase": [
      "error",
      {
        "allow": [""]
      }
    ],
    "i18n-text/no-en": "off",
    "import/extensions": "off",
    "no-console": "off"
  }
}
